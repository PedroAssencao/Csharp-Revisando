<h1>Lista de Motos</h1>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.4.1/css/bootstrap.min.css">

<table class="table table-dark">

    
       <tr> 
      <th scope="col">id</th>
      <th scope="col">Modelo</th>
      <th scope="col">Ano</th>
      <th scope="col">Cor</th>
    </tr> 

    <thead>
    
  </thead>
  <tbody>
      @foreach(var item in @ViewBag.Motos)
    {
    <tr>
      <th scope="row">mot_id</th>
      <td>@item.mot_modelo</td>
      <td>@item.mot_ano</td>
      <td>@item.mot_cor</td>
    </tr>

            }
      

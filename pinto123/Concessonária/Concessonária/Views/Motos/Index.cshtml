<h1>Lista de Motos</h1>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.4.1/css/bootstrap.min.css">

<table class="table table-dark">

    
       <tr> 
      <th scope="col">id</th>
      <th scope="col">Modelo</th>
      <th scope="col">Ano</th>
      <th scope="col"></th>
      <th scope="col">Cor</th>
      <th scope="col"></th>
    </tr> 

    <thead>
    
  </thead>
  <tbody>
      @foreach(var item in @ViewBag.Motos)
    {
    <tr>
      <th scope="row">@item.mot_id</th>
      <td>@item.mot_modelo</td>
      <td>@item.mot_ano</td>
      <td>@item.mot_cor</td>
                <td>
                    <a href="/Motos/Apagar/@item.mot_id" name="id" id="id" class="btn btn-danger">Apagar</a>
                </td>

                <td>
                    <a href="/Motos/Update/@item.mot_id" name="id" id="id" class="btn btn-danger">Atualizar</a>
                </td>
    </tr>

            }
      
  </tbody>
</table>
<div class='d-flex justify-content-center align-items-center'>
    <a href='/Motos/create' class='btn btn-success'>Inserir</a>
</div>